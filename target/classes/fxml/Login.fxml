<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.ProyectoFinal.controllers.LoginController"
            prefWidth="400" prefHeight="300">

    <children>

        <Label text="Iniciar Sesión"
               layoutX="140" layoutY="30"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <Label text="Correo:" layoutX="50" layoutY="90"/>
        <TextField fx:id="txtCorreo" layoutX="150" layoutY="85" prefWidth="200"/>

        <Label text="Contraseña:" layoutX="50" layoutY="140"/>
        <PasswordField fx:id="txtPassword" layoutX="150" layoutY="135" prefWidth="200"/>

        <Button text="Ingresar"
                layoutX="150" layoutY="190" prefWidth="100"
                onAction="#handleLogin"/>

        <Button text="Registrarse"
                layoutX="150" layoutY="230" prefWidth="100"
                onAction="#handleRegistrar"/>

    </children>
</AnchorPane>

